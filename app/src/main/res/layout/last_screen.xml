<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/last_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- BUFS logo -->
        <RelativeLayout
            android:id="@+id/text_shadow"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            >

            <TextView
                android:id="@+id/bufs"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:includeFontPadding="false"
                android:fontFamily="@font/pretendard_bold"
                android:text="BUFS"
                android:textColor="#000000"
                android:textSize="77sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bufs"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="@font/pretendard_bold"
                android:text="@string/last_text_1"
                android:textColor="#000000"
                android:textSize="16sp"
                android:lineHeight="18dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/pretendard_bold"
                android:includeFontPadding="false"
                android:text="BUFS"
                android:textAppearance="@style/bufs_shadow">

            </TextView>

        </RelativeLayout>

        <!-- Bottom Navigation Section -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/radius"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/questions"
                    android:layout_width="235dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_semibold"
                    android:lineHeight="25sp"
                    android:text="@string/last_text_2"
                    android:textAppearance="@style/last_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <View
                        android:id="@+id/first_num"
                        android:layout_width="22dp"
                        android:layout_height="20dp"
                        android:layout_toLeftOf="@id/result_1"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:background="@drawable/one_icon"
                        >
                    </View>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/result_1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:textAppearance="@style/result"
                            android:fontFamily="@font/pretendard_bold"
                            />

                        <View
                            android:id="@+id/line_1"
                            android:layout_width="200dp"
                            android:layout_height="1dp"
                            android:layout_below="@id/result_1"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:background="@drawable/line"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/second_major_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    >
                    <View
                        android:id="@+id/second_num"
                        android:layout_width="22dp"
                        android:layout_height="20dp"
                        android:layout_toLeftOf="@id/result_2"
                        android:background="@drawable/two_icon"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/result_2"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:layout_below="@id/line_1"
                            android:textAppearance="@style/result"
                            android:fontFamily="@font/pretendard_bold"
                            />
                        <View
                            android:layout_width="200dp"
                            android:layout_height="1dp"
                            android:layout_below="@id/result_2"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:background="@drawable/line"
                            />
                    </LinearLayout>


                </LinearLayout>






            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="235dp"
                    android:layout_height="63dp"
                    android:text="@string/last_text_3"
                    android:textAlignment="center"
                    android:textAppearance="@style/last_text"
                    android:fontFamily="@font/pretendard_semibold"
                    >

                </TextView>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/details_view_button"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:background="@drawable/main_screen_button"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="@string/button_last"
                    android:textAppearance="@style/button_back" />

                <View
                    android:layout_width="23dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/return_button"
                android:layout_marginTop="60dp"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:background="@drawable/main_screen_button"
                android:onClick="onClickTryAgain"
                android:clickable="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_return"
                    android:textAppearance="@style/button_return"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>




        </FrameLayout>
    </LinearLayout>
</RelativeLayout>