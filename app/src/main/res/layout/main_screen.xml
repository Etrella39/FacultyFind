<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_screen_back"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/bufs"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/pretendard_bold"
                android:text="BUFS"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="77sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bufs"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/pretendard_bold"
                android:text="내게 맞는 학과 찾기"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="19sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical"
            android:background="#FFCA08"
            android:padding="20dp"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/questions_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:lineHeight="21sp"
                    android:style="@style/main_screen_questions"
                    android:layout_marginRight="5dp"
                    android:text="@string/questions_no"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />

                <TextView
                    android:id="@+id/questions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:lineHeight="25sp"
                    android:style="@style/main_screen_questions"
                    android:text="@string/questions"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/questions"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:layout_marginTop="10dp"
                >

                <RadioButton
                    android:id="@+id/option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/option1"
                    android:style="@style/some_id"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingLeft="17dp"
                    />

                <RadioButton
                    android:id="@+id/option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/option2"
                    android:style="@style/some_id"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingLeft="17dp"
                    />

                <RadioButton
                    android:id="@+id/option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/option3"
                    android:textColor="#000000"
                    android:style="@style/some_id"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingLeft="17dp"
                    />
            </RadioGroup>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="232dp"
                android:layout_height="8dp"
                android:progress="40"
                android:max="100"
                android:layout_marginTop="20dp"
                android:progressDrawable="@drawable/progressbar_progressbar1"
                />

            <TextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:style="@style/progress"
                android:text="@string/progress"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />


        </LinearLayout>

        <!-- Bottom Navigation Section -->
        
        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/next_button"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:background="@drawable/main_screen_next_button"

                >

                <View
                    android:layout_width="23dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/left_arrow" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_back"
                    android:textAppearance="@style/button_back"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/pretendard_bold"
                    />
                


            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/back_button"
                android:layout_marginTop="53dp"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:background="@drawable/main_screen_next_button"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_next"
                    android:textAppearance="@style/button_back"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_centerInParent="true"
                    />
                <View
                    android:layout_width="23dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/right_arrow" />
            </RelativeLayout>




        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
